FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/freestreamConditions"

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $p;

boundaryField
{
    inlet
    {
        type            characteristicFarfieldPressure;
        #include        "include/freestreamConditions"
        value           uniform $p;
    }
    freestream
    {
        type            characteristicFarfieldPressure;
        #include        "include/freestreamConditions"
        value           uniform $p;
    }
    inviscidWall
    {
        type            symmetryPlane;
    }
    viscousWall
    {
        type            characteristicWallPressure;
        value           uniform $p;
    }
    outlet
    {
        type            zeroGradient;
    }
}


